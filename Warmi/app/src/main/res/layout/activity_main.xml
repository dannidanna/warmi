<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="app.warmi.rodriguez.danny.warmi.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnDenuncia"
            style="@style/miEstilo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/bordetres"
            android:elevation="24dp"
            android:text="DENUNCIA"
            android:textColor="@android:color/background_dark"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="139dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnInstMaps"
            style="@style/miEstilo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/bordedos"
            android:text="MAPA DE INSTITUCIONES"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="139dp"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/btnDenuncia"
            android:layout_alignStart="@+id/btnDenuncia"
            android:layout_marginTop="62dp" />

        <Button
            android:id="@+id/btnInstInfo"
            style="@style/miEstilo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/bordedos"
            android:text="INSTITUCIONES EN CBBA."
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="139dp"
            android:layout_above="@+id/btnCuenta"
            android:layout_alignLeft="@+id/btnCuenta"
            android:layout_alignStart="@+id/btnCuenta"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCuenta"
            style="@style/miEstilo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/btnDdhh"
            android:layout_alignLeft="@+id/btnDdhh"
            android:layout_alignStart="@+id/btnDdhh"
            android:layout_marginBottom="56dp"
            android:background="@drawable/bordedos"
            android:text="MI CUENTA" />

        <Button
            android:id="@+id/btnHistorial"
            style="@style/miEstilo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/bordedos"
            android:text="MIS DENUNCIAS"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="139dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/btnInstMaps"
            android:layout_alignLeft="@+id/btnInstInfo"
            android:layout_alignStart="@+id/btnInstInfo" />

        <Button
            android:id="@+id/btnDdhh"
            style="@style/miEstilo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_above="@+id/btnDelitos"
            android:layout_alignLeft="@+id/btnDenuncia"
            android:layout_alignStart="@+id/btnDenuncia"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bordedos"
            android:text="DDHH DE LA MUJER" />

        <Button
            android:id="@+id/btnDelitos"
            style="@style/miEstilo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/bordedos"
            android:text="DELITOS"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/btnDdhh"
            android:layout_alignStart="@+id/btnDdhh" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/rose"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView5"
            style="@style/miEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:elevation="24dp"
            android:text="WARMI"
            android:textSize="30sp"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
