<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="app.warmi.rodriguez.danny.warmi.DenunciaActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnAtras"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:background="@drawable/bordedos"
            android:text="ATRÁS"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_above="@+id/btnAtras"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp"
            android:background="@drawable/bordetres"
            android:elevation="24dp"
            android:text="CERRAR SESIÓN"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/bri" />

        <TextView
            android:id="@+id/articulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnCerrarSesion"
            android:layout_alignStart="@+id/btnCerrarSesion"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="63dp"
            android:text="Nombre usuario"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/articulo"
            android:layout_alignStart="@+id/articulo"
            android:layout_below="@+id/articulo"
            android:layout_marginTop="22dp"
            android:text="Telefono usuario"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/telefono"
            android:layout_alignStart="@+id/telefono"
            android:layout_below="@+id/telefono"
            android:layout_marginTop="22dp"
            android:text="Correo usuario"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
