<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="app.warmi.rodriguez.danny.warmi.DenunciaActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/ciDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="   Ci denunciante"
            android:inputType="text"
            android:textSize="15dp"
            android:layout_marginBottom="13dp"
            android:layout_above="@+id/numDen"
            android:layout_alignLeft="@+id/numDen"
            android:layout_alignStart="@+id/numDen"
            android:layout_alignRight="@+id/numDen"
            android:layout_alignEnd="@+id/numDen"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"/>

        <EditText

            android:id="@+id/ciVic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="   Ci victima (opc.)"
            android:inputType="text"
            android:textSize="15dp"
            android:layout_above="@+id/numVic"
            android:layout_alignLeft="@+id/numVic"
            android:layout_alignStart="@+id/numVic"
            android:layout_marginBottom="24dp"
            android:layout_alignRight="@+id/numVic"
            android:layout_alignEnd="@+id/numVic"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"/>

        <EditText
            android:id="@+id/nomDen"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="   Nombre denunciante"
            android:inputType="textPersonName"
            android:textSize="15dp"
            android:layout_above="@+id/ciDen"
            android:layout_alignLeft="@+id/ciDen"
            android:layout_alignStart="@+id/ciDen"
            android:layout_marginBottom="17dp"
            android:layout_alignRight="@+id/ciDen"
            android:layout_alignEnd="@+id/ciDen" />

        <EditText
            android:id="@+id/nomVic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="   Nombre victima (opc.)"
            android:inputType="textPersonName"
            android:textSize="15dp"
            android:layout_above="@+id/ciVic"
            android:layout_alignLeft="@+id/ciVic"
            android:layout_alignStart="@+id/ciVic"
            android:layout_marginBottom="15dp"
            android:layout_alignRight="@+id/ciVic"
            android:layout_alignEnd="@+id/ciVic"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"/>

        <EditText
            android:id="@+id/numDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="   Numero denunciante"
            android:inputType="number"
            android:textSize="15dp"
            android:layout_above="@+id/nomVic"
            android:layout_alignLeft="@+id/nomVic"
            android:layout_alignStart="@+id/nomVic"
            android:layout_marginBottom="20dp"
            android:layout_alignRight="@+id/nomVic"
            android:layout_alignEnd="@+id/nomVic"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"/>

        <EditText

            android:id="@+id/numVic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="   Numero victima (opc.)"
            android:inputType="number"
            android:textSize="15dp"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:layout_above="@+id/relacion"
            android:layout_alignLeft="@+id/relacion"
            android:layout_alignStart="@+id/relacion"
            android:layout_marginBottom="13dp"
            android:layout_alignRight="@+id/relacion"
            android:layout_alignEnd="@+id/relacion" />

        <EditText

            android:id="@+id/fechaDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="   Fecha"
            android:inputType="date"
            android:textSize="15dp"
            android:layout_above="@+id/descDen"
            android:layout_marginBottom="19dp"
            android:layout_alignLeft="@+id/descDen"
            android:layout_alignStart="@+id/descDen"
            android:layout_alignRight="@+id/descDen"
            android:layout_alignEnd="@+id/descDen"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"/>

        <EditText

            android:id="@+id/descDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="   DescripciÃ³n"
            android:inputType="text"
            android:textSize="15dp"
            android:layout_marginLeft="35dp"
            android:layout_above="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"/>

        <Button

            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim1"
            android:layout_alignParentBottom="true"

            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:background="@drawable/borde"
            android:text="Guardar"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="@android:color/background_light" />

        <Button

            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim1"
            android:layout_alignEnd="@+id/btnCamara"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/btnCamara"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:background="@drawable/borde"
            android:text="Cancelar"
            android:textColor="@android:color/background_light" />

        <Spinner
            android:id="@+id/relacion"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/fechaDen"
            android:layout_alignLeft="@+id/fechaDen"
            android:layout_alignRight="@+id/fechaDen"
            android:layout_alignStart="@+id/fechaDen"
            android:layout_centerVertical="true"
            android:background="@drawable/borde" />

        <Button

            android:id="@+id/btnCamara"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/borde"
            android:text="Camara"
            android:textSize="15dp"
            android:layout_marginBottom="18dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignLeft="@+id/btnGaleria"
            android:layout_alignStart="@+id/btnGaleria" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/btnGuardar"
            android:layout_alignLeft="@+id/btnGuardar"
            android:layout_alignStart="@+id/btnGuardar"
            android:layout_marginBottom="34dp"
            app:srcCompat="@drawable/borde" />

        <Button
            android:id="@+id/btnGaleria"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/borde"
            android:text="Galeria"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView"
            android:layout_alignEnd="@+id/btnCamara"
            android:layout_alignRight="@+id/btnCamara"
            android:text="Adjuntar imagen:"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="DENUNCIA"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"
            android:layout_alignParentTop="true" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
